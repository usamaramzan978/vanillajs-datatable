{
  "name": "@usama/tailwind-datatable",
  "version": "1.0.0",
  "description": "A lightweight, Vanilla JavaScript DataTable component styled with Tailwind CSS 4",
  "exports": "./dist/index.esm.js",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "test": "echo \"No tests specified\" && exit 0",
    "prepare": "npm run build",
    "postinstall": "node scripts/postinstall.js",
    "size": "size-limit"
  },
  "size-limit": [
    {
      "path": "dist/index.esm.js",
      "limit": "50 kB",
      "ignore": [
        "jspdf",
        "jspdf-autotable",
        "exceljs"
      ]
    }
  ],
  "peerDependencies": {
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "exceljs": "^4.4.0",
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@size-limit/preset-small-lib": "^11.2.0",
    "rollup": "^4.41.1",
    "size-limit": "^11.2.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "scripts"
  ]
}